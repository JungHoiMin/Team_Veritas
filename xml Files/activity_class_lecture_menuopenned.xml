<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnTermination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/solid_button"
        android:backgroundTint="#FB0E0E"
        android:text="종료" />

    <ImageView
        android:id="@+id/ivStu1"
        android:layout_width="158dp"
        android:layout_height="92dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:srcCompat="@drawable/iv_stu1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="85dp"
        android:orientation="vertical"/>

    <ImageButton
        android:id="@+id/ibtnConfirmParticipants"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ibtn_screen_sharing" />

    <ImageButton
        android:id="@+id/ibtnScreenSharing"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ibtn_screen_sharing" />

    <ImageButton
        android:id="@+id/ibtnMikeOn"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ibtn_screen_sharing" />

    <ImageButton
        android:id="@+id/ibtnOpenChat"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="227dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ibtn_screen_sharing" />

    <ImageButton
        android:id="@+id/ibtnCloseMenu"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="296dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ibtn_screen_sharing" />

    <ImageView
        android:id="@+id/ivExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/iv_example" />

</RelativeLayout>
